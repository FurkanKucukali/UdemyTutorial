@using WebApplication1.Models
@model Customer
@addTagHelper *,Microsoft.AspnetCore.Mvc.TagHelpers

<html>
<head>
    <title>Create Customer</title>
    <link href="~/css/StyleSheet.css" />

</head>
<body>
    <div>
        <h3>Create Customer</h3>
        <form asp-action="Create" asp-controller="Home"> 
            <div class=" form-group">
                <label>Customer Name: <span class="text-danger">*</span>
                                      <span asp-validation-for="@Model.FirstName" class="text-danger"></span></label>
                <input asp-for="@Model.FirstName" class="form-control" />
            </div>
            <div class=" form-group">
                <label>Customer Last Name:
                    <span class="text-danger">*</span>
                    <span asp-validation-for="@Model.LastName" class="text-danger"></span>
                </label>
                </label>
                <input asp-for="@Model.LastName" class="form-control" />
            </div>
            <div class=" form-group">
                <label>
                    Customer Age: <span class="text-danger">*</span>
                    <span asp-validation-for="@Model.Age" class="text-danger"></span>
                </label></label>
                <input asp-for="@Model.Age" class="form-control" />
            </div>
             <div class=" form-group text-right">
                <button type="submit" class="btn btn-primary">Create</button>
            </div>
        </form>
    </div>

</body>
</html>