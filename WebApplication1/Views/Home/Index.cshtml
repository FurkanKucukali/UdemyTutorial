@using WebApplication1.Models
@addTagHelper *,Microsoft.AspnetCore.Mvc.TagHelpers
@model List<Customer>

    <html xmlns="http://www.w3.org/1999/xhtml">
    <head>
        <title>Customer List</title>
        <link href ="~/css/StyleSheet.css" />
    </head>
    <body>
        <div class="container">
            <h3>Customer List</h3>
            <a href="/Home/Create">Ekle</a>
            <table class="table table-hover table-bordered">
                <tr>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Age</th>
                </tr>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.FirstName</td>
                        <td>@item.LastName</td>
                        <td>@item.Age</td>
                        <td>
                            <a asp-action="Update" asp-controller="Home" asp-route-id="@item.Id"> Güncelle</a>
                            <a asp-action="Remove" asp-controller="Home" asp-route-id="@item.Id"> Sil</a>

                        </td>
                    </tr>
                }
            </table>
        </div>
        


    </body>
    </html>
   