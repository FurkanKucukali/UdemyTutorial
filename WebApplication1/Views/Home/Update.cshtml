@using WebApplication1.Models
@addTagHelper *,Microsoft.AspnetCore.Mvc.TagHelpers
@model Customer
<html>
    <head>
        <title>Update Customer</title>
        <link href="~/css/StyleSheet.css" />

    </head>
    <body>
        <div class="container">
            <h3>Update - Customer</h3>
            <form asp-action="UpdateCustomer" asp-controller="Home" method="post">
                <input type="hidden" name="id" value="@Model.Id" />
                <div class="form-group">
                    <label> First Name : </label>
                    <input type="text" name="firstName" class="form-control" value="@Model.FirstName" />
                </div>
            <div class="form-group">
                <label> Last Name : </label>
                <input type="text" name="lastName" class="form-control" value="@Model.LastName" />
            </div>
            <div class="form-group">
                <label> Age : </label>
                <input type="text" name="Age" class="form-control" value="@Model.Age" />
            </div>
            <div class="form-group text-right">
                <button class="btn btn-primary" type="submit">Save</button>
            </div>
                </form>
        </div>
    </body>
</html>